@using OpenTelemetry.Models
@{
    ViewData["Title"] = "Home Page";
}
@model SuccessViewModel

<!-- CSS only -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script>
<div class="text-center">
    <h1 class="display-4">Welcome to Open Telemetry Demo</h1>
    @using(Html.BeginForm("Index", "PointOperation", FormMethod.Post))
    {
        <button type="submit">Fire Point Operations</button> <span color = "blue">@Model?.PointOpsMessage</span>
       
    }
    @using (Html.BeginForm("Index", "QueryOperation", FormMethod.Post))
    {
        <button type="submit">Fire Query Operations</button> <span color="blue">@Model?.QueryOpsMessage</span>

    }
     @using (Html.BeginForm("Index", "QueryOperation", FormMethod.Post))
    {
        <button type="submit">Fire Stream Operations</button> <span color="blue">@Model?.StreamOpsMessage</span>

    }

</div>
